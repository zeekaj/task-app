src/
 ├─ index.tsx              # Entry point
 ├─ App.tsx                # Main App wrapper
 ├─ firebase.ts            # Firebase initialization
 ├─ types.ts               # Shared types (Task, Project, Blocker, etc.)
 ├─ hooks/
 │   ├─ useAuth.ts
 │   ├─ useProjects.ts
 │   ├─ useTasks.ts
 │   └─ useBlockers.ts
 ├─ services/
 │   ├─ projects.ts        # CRUD for projects
 │   ├─ tasks.ts           # CRUD for tasks
 │   └─ blockers.ts        # CRUD for blockers
 ├─ components/
 │   ├─ Header.tsx
 │   ├─ Sidebar.tsx
 │   ├─ TaskItem.tsx
 │   ├─ TaskEditForm.tsx
 │   ├─ BlockerModal.tsx
 │   ├─ BlockerManagerModal.tsx
 │   ├─ PromotionModal.tsx
 │   ├─ views/
 │   │   ├─ TasksView.tsx
 │   │   ├─ ProjectView.tsx
 │   │   └─ BlockedView.tsx
 │   └─ shared/
 │       └─ Icon.tsx
